<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.bigandroiddev.vibify.Utils.Tutorial2$PlaceholderFragment">

    <TextView
        android:id="@+id/tutorial3_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/text_padding"
        android:gravity="center"
        android:textSize="@dimen/abc_text_size_title_material"
        android:text="Vibify Settings"/>

    <TextView
        android:id="@+id/tutorial3_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="@dimen/text_padding"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/abc_text_size_medium_material"
        android:text="Tune your Vibify settings! Click the thre dots for more information and configuration"/>

    <ListView
        android:id="@+id/tutorial_drawer_list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tutorial3_title"
        android:layout_above="@id/tutorial3_message"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"/>



</RelativeLayout>